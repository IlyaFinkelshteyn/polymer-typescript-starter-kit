{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "system",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "build",
    "bower_components",
    "node_modules"
  ]
}
